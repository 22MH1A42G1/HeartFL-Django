# ============================================================================
# EXAMPLE ENVIRONMENT VARIABLES FOR HEARTFL
# ============================================================================
# Copy this file to .env and fill in your actual configuration values
# For development: Use console email backend
# For production: Use SMTP with proper SSL/TLS configuration
# ============================================================================

# Django Core Settings
DEBUG=True  # Set to False in production

# Generate a new SECRET_KEY for production:
# python3 -c "import secrets; print(secrets.token_urlsafe(50))"
DJANGO_SECRET_KEY=django-insecure-heartfl-2026-change-in-production

# Allowed Hosts (comma-separated for multiple domains)
# Development: localhost,127.0.0.1
# Production: yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# Security Settings (Enable in production)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Email Configuration
# For development (prints to console):
EMAIL_BACKEND=console

# For production (SMTP):
# EMAIL_BACKEND=smtp
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-16-char-app-password

# Email settings (if using SMTP)
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-app-password

# Database Configuration
# SQLite (default): sqlite:///db.sqlite3
# PostgreSQL: postgresql://user:password@localhost:5432/heartfl_db
DATABASE_URL=sqlite:///db.sqlite3

# AWS S3 Configuration (Optional)
# USE_S3=False
# AWS_ACCESS_KEY_ID=your-key
# AWS_SECRET_ACCESS_KEY=your-secret
# AWS_STORAGE_BUCKET_NAME=your-bucket

# Logging
LOGGING_LEVEL=INFO
LOG_FILE_PATH=logs/django.log

# Database Backup
BACKUP_ENABLED=False
BACKUP_PATH=backups/
BACKUP_RETENTION_DAYS=30

# Rate Limiting
RATE_LIMIT_ENABLED=False
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
